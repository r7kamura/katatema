{
  "name": "modan",
  "description": "A minimalistic static site generator.",
  "version": "0.0.3",
  "author": "Ryo Nakamura <r7kamura@gmail.com> (https://github.com/r7kamura)",
  "bin": "./dist/bin/modan",
  "bugs": "https://github.com/r7kamura/modan/issues",
  "dependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "cross-spawn": "^5.0.1",
    "file-loader": "^0.9.0",
    "glob-promise": "^1.0.6",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2",
    "write-file-webpack-plugin": "^3.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "fixpack": "^2.3.1"
  },
  "files": [
    "dist",
    "head.js"
  ],
  "homepage": "https://github.com/r7kamura/modan",
  "keywords": [
    "static site generator"
  ],
  "license": "MIT",
  "main": "./dist/lib/index.js",
  "repository": "r7kamura/modan",
  "scripts": {
    "build": "yarn run build:clean && yarn run build:mkdir && yarn run build:bin && yarn run build:lib && yarn run build:permission",
    "build:bin": "babel ./bin/modan --out-file ./dist/bin/modan && babel ./bin/modan-build --out-file ./dist/bin/modan-build && babel ./bin/modan-serve --out-file ./dist/bin/modan-serve",
    "build:clean": "rm -rf ./dist",
    "build:lib": "babel ./src --out-dir ./dist/lib",
    "build:mkdir": "mkdir -p ./dist/bin",
    "build:permission": "chmod +x ./dist/bin/*",
    "lint": "fixpack",
    "test": "babel-node ./bin/modan build"
  }
}
